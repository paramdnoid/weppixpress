{
  "name": "weppixpress-backend",
  "version": "2.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test mocha 'tests/**/*.test.js'",
    "test:unit": "NODE_ENV=test mocha 'tests/unit/**/*.test.js'",
    "test:integration": "NODE_ENV=test mocha 'tests/integration/**/*.test.js'",
    "test:watch": "NODE_ENV=test mocha 'tests/**/*.test.js' --watch",
    "migrate": "node src/database/migrate.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "build": "npm run lint && npm test",
    "clean": "rm -rf logs/* && rm -rf temp/* && rm -rf uploads/temp/*",
    "db:migrate": "npm run migrate",
    "db:seed": "node scripts/seed.js",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deploy": "npm run deploy:sync && npm run deploy:permissions",
    "deploy:sync": "rsync -avz --delete --exclude=docs --exclude=.git --exclude=*.log ./ root@km14307.keymachine.de:/home/users/weppi/www/dev.weppixpress.com/backend/",
    "deploy:permissions": "ssh root@km14307.keymachine.de 'chown -R www-data:www-data /home/users/weppi/www/dev.weppixpress.com/backend && chmod -R 755 /home/users/weppi/www/dev.weppixpress.com/backend'"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "cheerio": "^1.1.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "filesize": "^11.0.2",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.3.5",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.6.1",
    "speakeasy": "^2.0.0",
    "uuid": "^13.0.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "chai": "^5.2.1",
    "eslint": "^9.33.0",
    "mocha": "^11.7.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4"
  }
}
