{
  "name": "weppixpress-backend",
  "version": "2.0.0",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch server.ts",
    "build": "tsc --noEmitOnError false",
    "type-check": "tsc --noEmit",
    "test": "NODE_ENV=test mocha 'tests/**/*.test.ts'",
    "test:unit": "NODE_ENV=test mocha 'tests/unit/**/*.test.ts'",
    "test:integration": "NODE_ENV=test mocha 'tests/integration/**/*.test.ts'",
    "test:watch": "NODE_ENV=test mocha 'tests/**/*.test.ts' --watch",
    "migrate": "tsx src/database/migrate.ts",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "clean": "rm -rf dist logs/* temp/* uploads/temp/*",
    "db:migrate": "npm run migrate",
    "db:seed": "tsx scripts/seed.ts",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deploy": "npm run build && npm run deploy:sync && npm run deploy:permissions",
    "deploy:sync": "rsync -avz --delete --exclude=docs --exclude=.git --exclude=*.log ./dist/ root@km14307.keymachine.de:/home/users/weppi/www/dev.weppixpress.com/backend/",
    "deploy:permissions": "ssh root@km14307.keymachine.de 'chown -R www-data:www-data /home/users/weppi/www/dev.weppixpress.com/backend && chmod -R 755 /home/users/weppi/www/dev.weppixpress.com/backend'"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "cheerio": "^1.1.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "filesize": "^11.0.2",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.3.5",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.6.1",
    "speakeasy": "^2.0.0",
    "uuid": "^13.0.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.11",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-mongo-sanitize": "^2.1.2",
    "@types/express-rate-limit": "^6.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.15",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.11.10",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "chai": "^5.2.1",
    "eslint": "^9.33.0",
    "mocha": "^11.7.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
