PORT=3001
NODE_ENV=development

# Database
DB_HOST=localhost
DB_USER=root
DB_PASS=your_database_password
DB_NAME=file_manager

# JWT - Generate secure random keys: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_64_chars_minimum
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_64_chars_minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# CORS - Add your frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
UPLOAD_DIR=../uploads
MAX_FILE_SIZE=104857600
MAX_FILES_PER_REQUEST=10

# Redis (optional for rate limiting)
REDIS_URL=redis://localhost:6379

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100